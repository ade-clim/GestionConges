<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
     "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
    
<hibernate-configuration>
  <session-factory>
  
    <!-- pour voir les requetes SQL -->
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    
    <!--  Paramètres de connexion à la base de données -->
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gestionconges</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>

    <!-- Comportement pour la conservation des tables -->
    <property name="hbm2ddl.auto">update</property>

    <!-- Fichiers à mapper -->
    <mapping class="fr.formation.afpa.entity.Collaborateur"/>
    <mapping class="fr.formation.afpa.entity.Manager"/>
    <mapping class="fr.formation.afpa.entity.Conges"/>
    
    
  </session-factory>
</hibernate-configuration>
